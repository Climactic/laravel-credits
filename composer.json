{
    "name": "climactic/laravel-credits",
    "description": "A ledger-based Laravel package for managing credit-based systems in your application.",
    "keywords": [
        "laravel",
        "laravel-credits",
        "balance",
        "ledger",
        "transactions"
    ],
    "homepage": "https://github.com/climactic/laravel-credits",
    "license": "MIT",
    "authors": [
        {
            "name": "Aditya Tripathi",
            "email": "aditya@climactic.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/laravel-package-tools": "^1.92.7",
        "illuminate/contracts": "^12.34.0"
    },
    "require-dev": {
        "laravel/pint": "^1.25.1",
        "nunomaduro/collision": "^8.8.2",
        "orchestra/testbench": "^10.6.0",
        "pestphp/pest": "^4.1.2",
        "pestphp/pest-plugin-arch": "^4.0.0",
        "pestphp/pest-plugin-laravel": "^4.0.0"
    },
    "autoload": {
        "psr-4": {
            "Climactic\\Credits\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Climactic\\Credits\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-credits --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/climactic"
        },
        {
            "type": "ko-fi",
            "url": "https://ko-fi.com/climacticco"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Climactic\\Credits\\CreditsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}